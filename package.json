{
  "name": "hn-designsystem",
  "private": true,
  "workspaces": [
    "npm/*"
  ],
  "version": "1.0.0",
  "description": "NPM pakke og dokumentasjon for Helsenorges designsystem",
  "repository": {
    "type": "git",
    "url": "https://github.com/helsenorge/designsystem.git"
  },
  "homepage": "https://helsenorge.design",
  "author": "Helsenorge",
  "maintainers": [
    "ROX"
  ],
  "license": "MIT",
  "scripts": {
    "build": "npm run build:ordered",
    "build:ordered": "npm-run-all -s build:build-tools build:designsystem build:consumers",
    "build:build-tools": "npm run -w frankenstein-build-tools build",
    "build:designsystem": "npm run -w @helsenorge/designsystem-react build",
    "build:consumers": "npm-run-all -p build:datepicker build:lightbox",
    "build:datepicker": "npm run -w @helsenorge/datepicker build",
    "build:lightbox": "npm run -w @helsenorge/lightbox build",
    "clean:npm": "npm-run-all clean:packages clean:root",
    "clean:packages": "npm run -ws --if-present clean",
    "clean:root": "rimraf node_modules",
    "validate": "npm-run-all -s typecheck prettier eslint stylelint",
    "prettier": "npm run -ws --if-present prettier",
    "prettier:fix": "npm run -ws --if-present prettier:fix",
    "eslint": "npm run -ws --if-present eslint",
    "eslint:fix": "npm run -ws --if-present eslint:fix",
    "stylelint": "npm run -ws --if-present stylelint",
    "stylelint:fix": "npm run -ws --if-present stylelint:fix",
    "typecheck": "npm run -ws --if-present typecheck",
    "test": "npm run -ws --if-present test",
    "posttest": "node ./scripts/aggregate-packages-coverage.cjs && nyc report --reporter lcov",
    "postversion": "npm run changelog",
    "changelog": "conventional-changelog --config changelog.config.js --infile CHANGELOG.md --same-file --release-count 0 --skip-unstable --tag-prefix v --outputUnreleased false",
    "postchangelog": "git add CHANGELOG.md && git commit --amend --no-edit && git tag -f v$(node -p \"require('./package.json').version\")",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@helsenorge/eslint-config": "^36.1.1",
    "conventional-changelog-cli": "^4.1.0",
    "eslint-plugin-storybook": "9.1.10",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "npm-run-all2": "^7.0.2",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": "^22.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix",
    "*.{js,jsx,ts,tsx,css,scss,md,json}": "prettier --write"
  }
}
