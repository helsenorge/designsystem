{
	"name": "hn-designsystem",
	"version": "1.0.0",
	"description": "NPM pakke og dokumentasjon for Helsenorges designsystem",
	"repository": {
		"type": "tfs",
		"url": "https://dev.azure.com/nhnfelles/Helsenorge/_git/HN-Designsystem"
	},
	"homepage": "https://helsenorge.design",
	"author": "Helsenorge",
	"maintainers": [
		"ROX"
	],
	"license": "MIT",
	"scripts": {
		"bootstrap": "lerna bootstrap --no-ci",
		"bootstrap:ci": "lerna bootstrap",
		"build": "lerna run build",
		"lint": "lerna run lint",
		"test": "lerna run test",
		"test:update": "lerna run test:update",
		"format:ci": "lerna run format:ci",
		"version": "lerna version --no-push --force-publish=* --allow-branch=*/*",
		"postversion": "lerna run build",
		"publish:beta": "cd npm/designsystem/lib && npm publish --tag=beta",
		"publish:latest": "cd npm/designsystem/lib && npm publish",
		"confluence:icons": "node utils/IconGenerator/index.js",
		"format": "lerna run format",
		"validate": "lerna run validate",
		"clean": "lerna run clean"
	},
	"dependencies": {
		"eslint": "6.7.2",
		"eslint-config-prettier": "6.7.0",
		"eslint-plugin-prettier": "3.1.1",
		"eslint-plugin-html": "^6.0.0",
		"eslint-plugin-react": "7.17.0",
		"fs-extra": "^8.1.0",
		"husky": "^4.0.3",
		"lerna": "^6.4.1",
		"lint-staged": "^9.5.0",
		"rimraf": "^3.0.0",
		"typescript": "~3.8.3"
	},
	"devDependencies": {
		"node-schedule": "^1.3.2",
		"puppeteer": "^2.1.1"
	}
}
