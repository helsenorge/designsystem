{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "resolveJsonModule": true,

    /* Monorepo paths so TS can resolve subpaths to SOURCE */
    "baseUrl": ".",
    "paths": {
      "@helsenorge/designsystem-react": ["npm/designsystem/src/index.ts"],
      "@helsenorge/designsystem-react/*": ["npm/designsystem/src/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}
