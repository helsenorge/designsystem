{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "inlineSourceMap": false,
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types/",
    "emitDecoratorMetadata": true,
    "types": ["jest", "node", "react"]
  },
  "include": ["src/**/*"],
  "exclude": [".storybook/**/*", "dist", "dist_OLD", "node_modules", "scripts", "src/utils", "**/__snapshots__", "**/__snapshots__/*", "**/*.stories.tsx","**/*.styled.tsx","**/*.test.tsx",]
}
