{
  "name": "@helsenorge/designsystem-react",
  "version": "0.0.1-dev.0",
  "main": "./dist/js/helsenorge.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/helsenorge/designsystem",
    "directory": "packages/designsystem-react"
  },
  "homepage": "https://helsenorge.design",
  "description": "The official design system for Helsenorge built with React.",
  "author": "Steffen Lien <steffen.lien@ehelse.no>",
  "bugs": {
    "url": "https://github.com/Helsenorge/designsystem/issues",
    "email": "design@helsenorge.design"
  },
  "license": "MIT",
  "keywords": [
    "components",
    "design-system",
    "helsenorge",
    "patterns",
    "react"
  ],
  "scripts": {
    "build": "yarn clean && rollup -c --environment BUILD:production && yarn build:dts",
    "build:dts": "tsc --emitDeclarationOnly && dts-bundle-generator -project ./tsconfig.json -o ./dist/index.d.ts ./types/index.d.ts",
    "bundle-analyze": "webpack --profile --json > bundle-stats.json && webpack-bundle-analyzer ./bundle-stats.json",
    "clean": "rimraf dist types",
    "format": "npm run prettier -- --write",
    "lint": "eslint .",
    "prettier": "prettier \"src/**/*.+(js|jsx|json|yml|yaml|scss|ts|tsx)\"",
    "publish:dev": "npm version prerelease && git push --follow-tags",
    "start": "start-storybook -p 5000 -s ./src",
    "test": "jest",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "jest --watch",
    "icons:generate": "npx @svgr/cli --ref --no-view-box false --replace-attr-values '#000={color}' --svg-props width={size} --svg-props height={size} --template ./scripts/iconTemplate.js --ext tsx -d ./src/components/Icons/  ./src/icons",
    "icons:inject": "node ./scripts/iconInject.js",
    "validate": "npm run lint && npm run prettier -- --list-different"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "module": "./dist/js/helsenorge.esm.js",
  "source": "src/index.ts",
  "files": [
    "dist/**/*"
  ],
  "types": "./dist/index.d.ts",
  "typescript": {
    "declaration": "./dist/index.d.ts"
  },
  "peerDependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "dependencies": {
    "classnames": "^2.2.6"
  }
}
