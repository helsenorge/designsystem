{
  "name": "@helsenorge/designsystem-scss",
  "private": true,
  "version": "0.0.2-dev.1",
  "description": "The official design system for Helsenorge built with SCSS.",
  "repository": {
    "type": "git",
    "url": "https://github.com/helsenorge/designsystem",
    "directory": "packages/designsystem-scss"
  },
  "homepage": "https://helsenorge.design",
  "author": "Steffen Lien <steffen.lien@ehelse.no>",
  "bugs": {
    "url": "https://github.com/Helsenorge/designsystem/issues",
    "email": "contact@helsenorge.design"
  },
  "license": "MIT",
  "keywords": [
    "components",
    "css",
    "design-system",
    "helsenorge",
    "patterns",
    "scss",
    "styling"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/css/helsenorge.css",
  "unpkg": "dist/css/helsenorge.min.css",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "yarn run clean && yarn run build:scss && yarn run build:postcss && yarn run build:cleancss && yarn run build:post-script",
    "build:cleancss": "cleancss -o dist/css/helsenorge.min.css dist/css/helsenorge.css",
    "build:post-script": "node scripts/post-build.js",
    "build:postcss": "postcss --use autoprefixer --map false --output dist/css/helsenorge.css dist/css/helsenorge.css",
    "build:scss": "node-sass --output-style expanded --source-map true src/helsenorge.scss dist/css/helsenorge.css",
    "clean": "rimraf dist",
    "cz": "git-cz",
    "format": "prettier --write \"src/**/*.+(scss)\"",
    "generate:icon-font": "icon-font-generator --height 1000 --csspath src/base/icons.scss --types 'woff, woff2' --html false --json false src/icons/**/*.svg -o src/icons",
    "lint": "stylelint src/",
    "precommit": "lint-staged",
    "validate": "yarn lint && yarn format -l"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.2",
    "clean-css-cli": "^4.3.0",
    "icon-font-generator": "^2.1.10",
    "node-sass": "^4.13.0",
    "postcss-cli": "^6.1.3",
    "stylelint": "^11.1.1",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-prettier": "^1.1.1"
  }
}
